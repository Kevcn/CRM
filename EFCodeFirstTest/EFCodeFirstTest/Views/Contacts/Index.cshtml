@using CrmModels;
@model IEnumerable<Contact>

@{
    ViewBag.Title = "Contact Management";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["Message"]
    </div>
}


<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add New Contact", "Add")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Actions
        </th>
    </tr>

@foreach (var contact in Model) {
    <tr>
        @*<td>
            @contact.ContactId
        </td>*@
        <td>
            @contact.Name
        </td>
        <td>
            @Html.ActionLink("Update", "Update", new { id=contact.ContactId }) |
            @Html.ActionLink("Details", "Details", new { id=contact.ContactId }) |
            @Html.ActionLink("Delete", "Delete", new { id=contact.ContactId })
        </td>
    </tr>
}

</table>