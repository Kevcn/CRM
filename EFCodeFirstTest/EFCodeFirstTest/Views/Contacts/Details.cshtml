@model CrmModels.Contact

@{
    ViewBag.Title = "Contact Details";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-lg-6">

        <div class="row">
            <div class="col-xs-4 col-sm-3">
                @Html.LabelFor(m => m.Name)
            </div>
            <div class="col-xs-8 col-sm-9">
                @Model.Name
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-3">
                @Html.LabelFor(m => m.Phone)
            </div>
            <div class="col-xs-8 col-sm-9">
                @Model.Phone
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-3">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="col-xs-8 col-sm-9">
                @Model.Email
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-3">
                @Html.LabelFor(m => m.Position)
            </div>
            <div class="col-xs-8 col-sm-9">
                @Model.Position
            </div>
        </div>
</div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>