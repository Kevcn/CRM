@model CrmModels.Contact

@{
    ViewBag.Title = "Add New Contact";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            @*x sign*@
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["Message"]
    </div>
}



<h3>@ViewBag.Title</h3>

@using (Html.BeginForm()) 
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger"})
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Position, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Position, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Phone, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m => m.Company, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.Company.Name, (SelectList)ViewBag.companies, " ", new { @class = "form-control" })
            @Html.ActionLink("+", "Add", "Company")
        </div>


        <div class="form-group">
            <label class="checkbox-inline">
                @Html.CheckBoxFor(m => m.Favorite)   @Html.DisplayNameFor(m => m.Favorite)
            </label>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Contact" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
